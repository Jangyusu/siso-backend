{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": "./",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@config/config": [
        "libs/config/src"
      ],
      "@config/config/*": [
        "libs/config/src/*"
      ],
      "@app/document": [
        "libs/document/src"
      ],
      "@app/document/*": [
        "libs/document/src/*"
      ]
    }
  }
}